% function declaration
extern bar(a)

% function definition
fn foo(a, b) {
    a: a + b
    b: a * b + bar(b)
    if a = b {
        (1 + 2 + a) * (a + (1 + 2))
    } else {
        a + b
        a * (5 + 2)
    }
    for i in 0 ~ 10 {
        b: a + i
        for j in 0 ~ 10 {
            a: a + j
        }
    }
